<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

<servlet>
    <servlet-name>Chat</servlet-name>
    <servlet-class>Chat</servlet-class>
</servlet>
<servlet>
    <servlet-name>ChatMsg</servlet-name>
    <servlet-class>ChatMsg</servlet-class>
</servlet>
<servlet>
    <servlet-name>ReloadChat</servlet-name>
    <servlet-class>ReloadChat</servlet-class>
</servlet>
<servlet>
    <servlet-name>SignIn</servlet-name>
    <servlet-class>SignIn</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>Chat</servlet-name>
    <url-pattern>/chat</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>ChatMsg</servlet-name>
    <url-pattern>/chatmsg</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>ReloadChat</servlet-name>
    <url-pattern>/reloadchat</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>SignIn</servlet-name>
    <url-pattern>/signin</url-pattern>
</servlet-mapping>

<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
</welcome-file-list>

</web-app>
